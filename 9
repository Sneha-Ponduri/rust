// Declare global constants (must be type annotated and all caps by convention)
const INTEGER_CONST: i32 = 100;
const FLOAT_CONST: f64 = 3.1415;
const CHAR_CONST: char = 'R';
const BOOL_CONST: bool = true;
const STRING_CONST: &str = "RustLang";

fn main() {
    println!("Integer Constant: {}", INTEGER_CONST);
    println!("Float Constant: {}", FLOAT_CONST);
    println!("Character Constant: {}", CHAR_CONST);
    println!("Boolean Constant: {}", BOOL_CONST);
    println!("String Constant: {}", STRING_CONST);
}
